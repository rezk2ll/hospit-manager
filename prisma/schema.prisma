// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  firstName String
  lastName  String
  tel       String?  @unique
  email     String?  @unique
  address   String?
  animals   Animal[]
}

model Animal {
  id         Int     @id @default(autoincrement())
  name       String
  sex        String
  birthday   String
  weight     String
  type       String
  color      String?
  Identifier String? @unique
  visits     Visit[]

  clientId Int
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Visit {
  id           Int      @id @default(autoincrement())
  motif        String
  date         DateTime @default(now())
  observations String
  actions      String

  medical_acts   MedicalAct[]
  surgical_acts  SurgicalAct[]
  clinical_exams ClinicalExams[]
  Bill           Bill?
  Animal         Animal          @relation(fields: [animalId], references: [id])
  animalId       Int
}

model MedicalAct {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  code   String
  Visits Visit[]
}

model SurgicalAct {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  code   String
  Visits Visit[]
}

model ClinicalExams {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  code   String
  Visits Visit[]
}

model Bill {
  id      Int     @id @default(autoincrement())
  visit   Visit   @relation(fields: [visitId], references: [id])
  visitId Int     @unique
  paid    Boolean
  method  String
}
